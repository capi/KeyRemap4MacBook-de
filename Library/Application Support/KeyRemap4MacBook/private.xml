<?xml version="1.0"?>
<root>
  <list>
    <item>
		<name>Capi's Hacks</name>
		<list>
			<item>
			  <name>Map Curly Brackets to German PC layout (capi)</name>
			  <appendix>Change COMMAND_R+KEY_7 to OPTION_R+KEY_8</appendix>
			  <appendix>Change COMMAND_R+KEY_0 to OPTION_R+KEY_9</appendix>
			  <identifier>private.curly_brakets_to_german_pc_layout</identifier>
			  <autogen>--KeyToKey-- KeyCode::KEY_7, ModifierFlag::COMMAND_R, KeyCode::KEY_8, ModifierFlag::OPTION_R</autogen>
			  <autogen>--KeyToKey-- KeyCode::KEY_0, ModifierFlag::COMMAND_R, KeyCode::KEY_9, ModifierFlag::OPTION_R</autogen>
			</item>
			<item>
			  <name>Map Square Brackets to German PC layout (capi)</name>
			  <identifier>private.square_brakets_to_german_pc_layout</identifier>
			  <appendix>Change COMMAND_R+KEY_8 to OPTION_R+KEY_5</appendix>
			  <appendix>Change COMMAND_R+KEY_9 to OPTION_R+KEY_6</appendix>
			  <autogen>--KeyToKey-- KeyCode::KEY_8, ModifierFlag::COMMAND_R, KeyCode::KEY_5, ModifierFlag::OPTION_R</autogen>
			  <autogen>--KeyToKey-- KeyCode::KEY_9, ModifierFlag::COMMAND_R, KeyCode::KEY_6, ModifierFlag::OPTION_R</autogen>
			</item>
			<item>
			  <name>Map Pipe to German PC layout (capi)</name>
			  <appendix>Change COMMAND_R+&lt; to COMMAND_R+KEY_7</appendix>
			  <identifier>private.pipe_to_german_pc_layout</identifier>
			  <autogen>--KeyToKey-- KeyCode::GERMAN_LESS_THAN, ModifierFlag::COMMAND_R, KeyCode::KEY_7, ModifierFlag::OPTION_R</autogen>
			</item>
			<item>
			  <name>Map Tilde to German PC layout (capi)</name>
			  <appendix>Change COMMAND_R+BRACKET_RIGHT; to OPTION_R+SHIFT+KEY_8</appendix>
			  <identifier>private.tilde_to_german_pc_layout</identifier>
			  <autogen>--KeyToKey-- KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_R, KeyCode::N, ModifierFlag::OPTION_R</autogen>
			</item>
			<item>
			  <name>Map COMMAND_R+MINUS to Backslash (capi)</name>
			  <identifier>private.commandr_to_backslash</identifier>
			  <autogen>--KeyToKey-- KeyCode::MINUS, ModifierFlag::COMMAND_R, KeyCode::KEY_7, ModifierFlag::SHIFT_R | ModifierFlag::OPTION_R</autogen>
			</item>
			<item>
			  <name>Map COMMAND_R+q to @ (capi)</name>
			  <appendix>For better integration with iterm2, this maps COMMAND_R+q to OPTION_R+L</appendix>
			  <identifier>private.command_q_to_at</identifier>
			  <autogen>--KeyToKey-- KeyCode::Q, ModifierFlag::COMMAND_R, KeyCode::L, ModifierFlag::OPTION_R</autogen>
			</item>
			<item>
			  <name>Swap COMMAND_L and OPTION_L for TERMINAL (capi)</name>
			  <appendix>For irssi usage, map COMMAND_L to OPTION_L for TERMINAL class apps</appendix>
			  <appendix>Special treatment for COMMAND_L+TAB to still work as COMMAND_R+TAB</appendix>
			  <block>
			    <only>TERMINAL</only>
			    <autogen>--KeyToKey-- KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
			    <autogen>--KeyToKey-- KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
			    <autogen>--KeyToKey-- KeyCode::TAB, ModifierFlag::OPTION_L, KeyCode::TAB, ModifierFlag::COMMAND_R</autogen>
			  </block>
			  <identifier>private.command_l_to_option_l.in.terminal</identifier>
			</item>
			<item>
			  <name>Swap COMMAND_L and OPTION_L for REMOTEDESKTOPCONNECTION (capi)</name>
			  <appendix>For RDP usage, map COMMAND_L to OPTION_L for REMOTEDESKTOPCONNECTION class apps</appendix>
			  <appendix>Special treatment for COMMAND_L+TAB to still work as COMMAND_R+TAB</appendix>
			  <block>
			    <only>REMOTEDESKTOPCONNECTION</only>
			    <autogen>--KeyToKey-- KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
			    <autogen>--KeyToKey-- KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
			  </block>
			  <identifier>private.command_l_to_option_l.in.rdp</identifier>
			</item>
			<item>
			  <name>Swap COMMAND_R and OPTION_R for REMOTEDESKTOPCONNECTION (capi)</name>
			  <block>
			    <only>REMOTEDESKTOPCONNECTION</only>
			    <autogen>--KeyToKey-- KeyCode::COMMAND_R, KeyCode::OPTION_R</autogen>
			    <autogen>--KeyToKey-- KeyCode::OPTION_R, KeyCode::COMMAND_R</autogen>
			  </block>
			  <identifier>private.command_r_to_coption_r.in.rdp</identifier>
			</item>

			<item>
			  <name>Swap COMMAND_L and OPTION_L for X11 (capi)</name>
			  <appendix>For RDP usage, map COMMAND_L to OPTION_L for X11 class apps</appendix>
			  <appendix>Special treatment for COMMAND_L+TAB to still work as COMMAND_R+TAB</appendix>
			  <block>
			    <only>X11</only>
			    <autogen>--KeyToKey-- KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
			    <autogen>--KeyToKey-- KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
			  </block>
			  <identifier>private.command_l_to_option_l.in.X11</identifier>
			</item>
			<item>
			  <name>Swap COMMAND_R and OPTION_R for X11 (capi)</name>
			  <block>
			    <only>X11</only>
			    <autogen>--KeyToKey-- KeyCode::COMMAND_R, KeyCode::OPTION_R</autogen>
			    <autogen>--KeyToKey-- KeyCode::OPTION_R, KeyCode::COMMAND_R</autogen>
			  </block>
			  <identifier>private.command_r_to_coption_r.in.X11</identifier>
			</item>
		</list>
	</item>	
  </list>
</root>
